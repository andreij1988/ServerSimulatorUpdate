<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/showResult"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fillViewport="true">
<RelativeLayout
    android:id="@+id/activity_add_name"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context="com.andreij.serversimulator.AddName">


    <TextView
        android:text="Employee Number"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textSerial"/>
    <EditText
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Employee Number"
        android:inputType="number"
        android:textSize="18sp"
        android:id="@+id/editSerial"
        android:layout_below="@+id/textSerial"
        android:layout_marginTop="10dp"/>
    <TextView
        android:text="Name: "
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textName"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/editSerial"/>
    <EditText
        android:gravity="left"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Input Name"
        android:layout_toEndOf="@+id/textName"
        android:layout_toRightOf="@+id/textName"
        android:id="@+id/editName"
        android:layout_below="@+id/editSerial"
        android:layout_marginTop="10dp"/>
    <TextView
        android:text="Sex: "
        android:textSize="18sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editName"
        android:layout_marginTop="20dp"
        android:id="@+id/textSex"
        android:textStyle="bold"/>
    <Spinner
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/spinnerSex"
        android:layout_below="@+id/editName"
        android:layout_toRightOf="@+id/textSex"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/textOccupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textSex"
        android:layout_marginTop="20dp"
        android:text="Occupation"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <Spinner
        android:id="@+id/spinnerOccupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textOccupation"
        android:layout_toRightOf="@+id/textOccupation"
        android:textSize="18sp"/>
    <Button
        android:text="Add Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/butAdd"
        android:layout_below="@+id/textOccupation"
        android:layout_marginTop="20dp"/>
</RelativeLayout>
</ScrollView>